@page "/balloon"
@model LearnEnglish.Pages.balloon.balloonModel
@{
}

@{ Layout = null; }


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title> Learn English Third Book </title>

    <link rel="stylesheet" type="text/css" href="~/css/balloon/reset.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/balloon/ballon.min.css">
    <link rel="icon" type="image/x-icon" href="https://majemastoragetest.blob.core.windows.net/learn-english-test/ebook/favicon.ico" />



</head>

<body class="wof">
    <h1 style="font-size: xx-large;  font-family: cursive;  font-weight: 900;text-align: center;margin-top: 40px;  display:none;">Ballon - @ViewBag.BallonType</h1>
    <div class="controls" id="controls">
        <div class="star noselect rotate90" style="right: 5px;    width: 0px;    height: auto;    position: absolute;    font-family: cursive;    letter-spacing: 10px;    font-size: xx-small;    color: white;    line-height: 0;
">xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</div>
        <div class="button chapterTitle" style="">

            <a class="solid">@ViewData["chaptername"]</a>
        </div>
        <div class="button valijKapitel"><a href="#">Välj kapitel</a></div>
        <div class="button valijSida"><a href="#">Välj sida</a></div>
        <div class="button loggaout"><a onclick="javascript:window.top.close()" style="cursor:pointer">LOGGA UT</a></div>
    </div>
    <div id="@ViewData["chaptername"]" style="float: left;display:none;">
        <ul />
    </div>

    <div id="wheel" class="balloon" style="text-align: center; margin-top: auto;left: 11.2%;">
        <canvas id="canvas" width="800" height="720" class="wof balloon" style="left:0;max-width: 100%;">
            Oops!HTML5 canvas not available. Please update your browser.
        </canvas>
    </div>

    <div class="ballon-controller">
        <div class="ballonOption">
            <input type="radio" name="option" id="radio1" checked="checked" />
            <label value="PICTURES" for="radio1">PICTURES</label><br /><br />
            <input value="WORDS" type="radio" name="option" id="radio2" />
            <label class="radio2" for="radio2">WORDS</label>
        </div>
        <div data-role="page">
            <input type="range" name="points" id="points" value="1" min="0" max="2">
        </div>
    </div>
    <div class="overlay">
        <div id="loading-img"></div>
    </div>

    <script src="~/js/balloon/jquery.min.js"></script>
    <script src="~/js/balloon/createjs-2015.11.26.min.js"></script>
    <script src="~/js/balloon/app.min.js" type="text/javascript"></script>
  
</body>

</html>

